<div class="jumbotron">

  <h1>Welcome to My Event App</h1>
  <p>
    <div class="btn btn-primary btn-lg"><%= link_to 'New Event', new_event_path %></div>
  </p>
</div>

<p id="notice"><%= notice %></p>

<div class="container">

  <table>
    <thead>
      <tr>
      <th>Title</th>
        <th>Start date</th>
        <th>Duration</th>
        <th>Price</th>
        <th>Location</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.start_date %></td>
          <td><%= event.duration %></td>
          <td><%= event.price %></td>
          <td><%= event.location %></td>
          <td><%= event.description %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>