
<div class="container">

  <% flash.each do |type, msg| %>
    <div class="alert alert-info" role="notice">
      <%= msg %>
    </div>
  <% end %>

  <p>
    <strong>Title : </strong><%= @event.title%>
  </p>
  <p>
    <strong>Start date : </strong><%= @event.start_date%>
  </p>
  <p>
    <strong>Duration : </strong><%= @event.duration%>
  </p>
  <p>
    <strong>Price : </strong><%= @event.price%>
  </p>
  <p>
    <strong>Location : </strong><%= @event.location%>
  </p>
  <p>
    <strong>Description : </strong><%= @event.description%>
  </p>
  <p>
    <strong>Owner : </strong><%= @event.user.email%>
  </p>

  <div>
    <%= link_to 'Edit', edit_event_path(@event) %> |
    <%= link_to 'Back', events_path %>
  </div>
  
  <div class="mt-5">
   


<%= button_to 'Participate', {:controller => "participations", :action => "create", :event_id => @event.id} , :method=>:post  %>
      
  </div>

</div>



